Longest Alphabetical Substring

class LongestAlphabeticSubstring {
    public static void main(String[] args) {
        String str="abcb";
        char[] s=str.toCharArray();
        int count=1;
        for(int i=0;i<s.length;i++){
            if(s[i]+1==s[i+1]){
                count++;
            }else{
                break;
            }
        }
        System.out.println(count);
        
    }
}
